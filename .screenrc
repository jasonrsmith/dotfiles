vbell off

escape ``

#kill startup message
startup_message off

# define a bigger scrollback, default is 100 lines
defscrollback 10240

# Prepend/append register [/] to the paste if ^a^] is pressed.
# This lets me have autoindent modes in vi(m).
register [ "\033:se paste\015a"
register ] "\033:se nopaste\015a"
bind ^] paste [.]

bindkey "[1;5C" next
bindkey "[1;5D" prev

bind j focus down
bind k focus up
bind t focus top
bind b focus bottom

hardstatus off
caption string "%{= wk}%3n %t"
hardstatus alwayslastline "%{= wk}%-w%{= bw}%50>%n %t%{= wk}%+w%<"
shell /bin/bash
sorendition "+b kG"
activity "%c activity -> %n%f %t"
bell "%c bell -> %n%f %t^G"
vbell_msg " *beep* "
